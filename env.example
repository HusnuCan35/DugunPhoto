# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Google Drive API Configuration
# Google Cloud Console'dan Service Account oluşturup JSON key indirin
# Service account email adresi
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com

# Service account private key (JSON'dan alın, \n karakterlerini \\n olarak değiştirin)
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# Google Drive folder ID (opsiyonel - belirli bir klasöre yedeklemek için)
GOOGLE_DRIVE_FOLDER_ID=your_folder_id

# Admin Panel Password
ADMIN_PASSWORD=your_admin_password 